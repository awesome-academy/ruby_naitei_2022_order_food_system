<%= form_for [:admin, @product], :html => {:multipart => true} do |f| %>
  <div>
    <%= render "admin/shared/error_messages" %>
  </div>
  <div class="form-group">
    <%= f.label :name, t(".name") %>
    <%= f.text_field :name, class: "form-control"%>
  </div>
  <div class="form-group">
    <%= f.label :description, t(".des") %>
    <%= f.text_area :description, size: "50x6" , class: "form-control"%>
  </div>
  <div class="form-group">
    <%= f.label :price, t(".price") %>
    <%= f.number_field :price, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :quantity, t(".quantity") %>
    <%= f.number_field :quantity, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :category_id, t(".cate") %>
    <%= f.select :category_id, category_options ,{include_blank: t(".choose")}, {class: "form-control"} %>
  </div>
  <div>
    <%= f.file_field :image, class: "form-control" %>
  </div>
  <%= f.submit yield(:btn_text), class: "btn btn-primary" %>
<% end %>

<%= form_tag admin_products_path, method: :get do %>
  <div class="container_form form-group">
    <div class="container_form_details">
      <%= label_tag :starts_with, t(".name") %>
      <%= text_field_tag :starts_with, params[:starts_with], class: "text_field" %>
    </div>
    <div class="container_form_details">
      <%= label_tag :price_lower, t(".price_from") %>
      <%= text_field_tag :price_lower, params[:price_lower], class: "text_field" %>
    </div>
    <div class="container_form_details">
      <%= label_tag :price_higher, t(".price_to") %>
      <%= text_field_tag :price_higher, params[:price_higher], class: "text_field" %>
    </div>
    <div class="container_form_details">
      <%= button_tag t(".search"), name: nil, class: "btn btn-success btn_search" %>
    </div>
  </div>
<% end %>

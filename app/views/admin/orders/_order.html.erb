<tr>
  <th scope="row"><%= order.id %></th>
  <td><%= order.user_name %></td>
  <td><%= order.phone_number %></td>
  <td><%= order.address %></td>
  <td>
    <%= check_status order %>
  </td>
  <td><%= order.total %></td>
  <td><%= order.payment_type %></td>
  <td><%= order.created_at.strftime(Settings.date_format) %></td>
  <td>
    <% if order.inactive? %>
      <%= button_to t(".approve"), [:admin, order], method: :put, class: "btn btn-success btn_approve" %>
      <%= button_to t(".delete"), [:admin, order], method: :delete, class: "btn btn-danger", data: {confirm: t(".confirm")} %>
    <% else %>
      <%= button_to t(".delete"), [:admin, order], method: :delete, class: "btn btn-danger", data: {confirm: t(".confirm")} %>
    <% end %>
  </td>
</tr>

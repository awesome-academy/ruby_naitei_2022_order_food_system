<tr>
  <th scope="row"><%= order.id %></th>
  <td><%= order.user_id %></td>
  <td><%= order.user_name %></td>
  <td><%= order.address %></td>
  <td><%= order.status %></td>
  <td><%= order.total %></td>
  <td><%= order.payment_type %></td>
  <td><%= order.created_at.strftime(Settings.date_format) %></td>
  <td><%= order.updated_at.strftime(Settings.date_format) %></td>
  <td>
    <%= link_to t(".approve"), "#", class: "btn btn-primary" %>
    <%= link_to t(".delete"), [:admin, order], method: :delete, class: "btn btn-danger", data: {confirm: t(".confirm")} %>
  </td>
</tr>

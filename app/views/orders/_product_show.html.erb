<% order.detail_orders.each do |detail| %>
  <% product = detail.product %>
  <div class="food-item white">
    <div class="row">
      <div class="col-xs-12 col-sm-12 col-lg-8">
        <div class="rest-logo pull-left">
            <%= image_tag(product.image.url, class: "restaurant-logo pull-left") if product.image? %>
        </div>
        <div class="rest-descr">
            <h6><a href="#"><%= product.name %></a></h6>
            <p> <%= number_to_currency(product.price) %></p>
        </div>
      </div>
      <div class="col-xs-12 col-sm-12 col-lg-4 pull-right item-cart-info"> <span class="price pull-left"><%= detail.quantity %></span>
    </div>
    </div>
  </div>
<% end %>

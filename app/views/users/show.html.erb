<% provide(:title, @user.name) %>
<div class="row">
  <section class="inner-page-hero bg-image">
    <div class="profile">
      <div class="container">
        <h1><%= t ".page" %></h1>
        <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4 profile-img">
          <div class="image-wrap">
            <figure><%= gravatar_for @user %></figure>
          </div>
        </div>
        <div class="col-xs-12 col-sm-12 col-md-8 col-lg-8 profile-desc">
            <div class="pull-left right-text white-txt">
              <h2><%=t(".name")%><%= @user.name %></h2>
              <ul class="nav nav-inline">
                <p><li class="nav-item"><%=t(".address")%><%= @user.address %></li></p>
                <p><li class="nav-item"><%=t(".phone_number")%><%= @user.phone_number %></li></p>
                <p><li class="nav-item"><%=t(".email")%><%= @user.email %></li></p></p>
              </ul>
              <%= link_to t(".edit"), edit_user_path(@user), class: "btn btn-success" %>
            </div>
        </div>
      </div>
    </div>
  </section>
</div>

<% provide(:title, t(".heading")) %>
<!-- banner part starts -->
<section class="hero bg-image">
  <div class="hero-inner">
    <div class="container text-center hero-text font-white">
      <h1><%= t(".top")%></h1>
      <div class="banner-form">
        <form class="form-inline">
          <%= form_tag(root_path) do %>
            <div class="form-group">
              <%= text_field_tag :starts_with, params[:starts_with], class: "text_field form-control" %>
              <%= button_tag t(".search_btn"), name: nil, class: "btn theme-btn btn_search" %>
            </div>
          <% end %>
        </form>
      </div>
    </div>
  </div>
</section>
<section class="product">
  <div class="container">
    <div class="title text-xs-center m-b-30">
      <h2><%= t(".title")%></h2>
    </div>
    <div class="row">
      <%= render(@products) || t(".products_empty") %>
    </div>
    <%== pagy_bootstrap_nav @pagy %>
  </div>
</section>
